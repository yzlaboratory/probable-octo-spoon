<script>
  window.addEventListener(
    "load",
    () => {
      checkButtons();
    },
    true,
  );
  const prevButton = document.querySelector(".newsPrevButton");
  const nextButton = document.querySelector(".newsNextButton");
  const scrollContainer = document.querySelector(".newsContainer");
  const newsCardContainer = document.querySelector(".newscardcontainer");
  nextButton?.addEventListener("click", () => {
    if (scrollContainer && newsCardContainer) {
      scrollContainer.scrollLeft =
        scrollContainer.scrollLeft +
        newsCardContainer.getBoundingClientRect().width * 4;
    }
    checkButtons();
  });
  prevButton?.addEventListener("click", () => {
    if (scrollContainer && newsCardContainer) {
      scrollContainer.scrollLeft =
        scrollContainer.scrollLeft -
        newsCardContainer.getBoundingClientRect().width * 4;
    }
    checkButtons();
  });

  function checkButtons() {
    checkForwardButton();
    checkBackButton();
  }

  function checkForwardButton() {
    if (scrollContainer && newsCardContainer && nextButton) {
      if (
        scrollContainer.scrollLeft +
          newsCardContainer.getBoundingClientRect().width * 4 >=
        scrollContainer.scrollWidth -
          newsCardContainer.getBoundingClientRect().width * 4
      ) {
        nextButton.classList.add("hidden");
      } else {
        nextButton.classList.remove("hidden");
      }
    }
  }

  function checkBackButton() {
    if (scrollContainer && newsCardContainer && prevButton) {
      if (
        scrollContainer.scrollLeft -
          newsCardContainer.getBoundingClientRect().width * 4 <=
        0
      ) {
        prevButton.classList.add("hidden");
      } else {
        prevButton.classList.remove("hidden");
      }
    }
  }
</script>
<style>
  .hidden {
    display: none;
  }
</style>
