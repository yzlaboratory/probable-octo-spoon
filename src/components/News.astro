---
import Newscard from "./Newscard.astro";
import news1 from "../assets/newsimage1.png";
import code from "../assets/code.jpg";
import obbo from "../assets/obbo.svg";
import metallbauwalter from "../assets/metallbauwalter.jpg";
import zs from "../assets/logos/zimmerundschu.png";
import kempf from "../assets/logos/kempf.png";
import lsheizung from "../assets/logos/ls.png";
import hjm from "../assets/logos/hjm.png"
import tankstellezimmer from "../assets/logos/tankstellezimmer.png"
import schmittfood from "../assets/schmittfood.jpg";
import mwkonzept from "../assets/mwkonzept.png";
import britz from "../assets/britz.png";
import bruno from "../assets/bruno.png";
import Gallery from "./Gallery.astro";
import Sponsorcard from "./Sponsorcard.astro";
import { getCollection } from "astro:content";

const allNews = await getCollection("news").then(array => array.sort((a,b) =>  b.data.date.valueOf() - a.data.date.valueOf()));

---

<Gallery
  childrenClassName="newscardcontainer"
  headerTitle="ALEMANNIA NEWS"
  classPrefix="news"
  numberOfItemsInViewport="4"
>
  {
    allNews.map((item: any, index: number) => {
   
      if (index == 3)
      {
      return (
          <Sponsorcard
            ImageUrls={[schmittfood, hjm, metallbauwalter, lsheizung, kempf, obbo, zs, tankstellezimmer]}
            Urls={[
              "https://www.schmitt-food.net/",
              "https://www.sachverstaendiger-mueller.de/index.html",
              "https://www.metallbau-walter.info/",
              "https://www.ls-heizung.de/",
              "https://kempf-gmbh.com/",
              "https://www.obbo.de/",
              "https://www.zsmobile.de/",
              "https://www.zsmobile.de/"
            ]}
            Interval="15000"
            WidthTailwindClass="w-1/4"
            Identifier="newssponsors"
            Animated="true"
          />
          <Newscard
            Title={item.data.title}
            Tag={item.data.tag}
            Description={item.data.short}
            Date={item.data.date.toLocaleDateString()}
            ImageUrl={item.data.imageurl}
            Path={item.data.path}
          />
        );
      }
      else {
        return(   
        <Newscard
          Title={item.data.title}
          Tag={item.data.tag}
          Description={item.data.short}
          Date={item.data.date.toLocaleDateString()}
          ImageUrl={item.data.imageurl}
          Path={item.data.path}
        />)
        }
      }
    )
  }
</Gallery>
<style>
  .hidden {
    display: none;
  }
</style>
