---
const { Imagesrc, Name, Title, Mail, Phone } = Astro.props;
import { Image } from "astro:assets";
---

<div
  class="card text-primary m-3 flex snap-start scroll-m-3 flex-row rounded-sm bg-white"
>
  <div class="m-1 flex h-36 w-36 overflow-hidden rounded-full">
    <Image src={Imagesrc} alt="Portrait" class="min-w-full object-cover" />
  </div>
  <div class="flex flex-1 flex-col justify-between overflow-hidden p-2 pl-0">
    <div class="relative bottom-[4px] flex flex-col">
      <h1 class="text-end font-bold">{Name}</h1>
      <h3 class="text-end text-sm">{Title}</h3>
    </div>
    <div class="relative top-[5px] flex flex-col text-xs">
      <div class="flex self-end">
        <span class="material-symbols-rounded pr-1 text-base! text-gray-500"
          >phone</span
        ><span
          class="relative bottom-[1px] self-center text-end font-extralight text-gray-500"
          >{Phone}</span
        >
      </div>
      <div class="flex self-end">
        <span class="material-symbols-rounded pr-1 text-base! text-gray-500"
          >mail</span
        ><span
          class="relative bottom-[1px] w-max self-center text-end font-extralight text-gray-500"
          >{Mail}</span
        >
      </div>
    </div>
  </div>
</div>
