---
const { Imagesrc, Name, Title, Mail, Phone } = Astro.props;
import { Image } from "astro:assets";
---

<div class="m-3 card bg-white rounded-sm text-primary flex flex-row">
    <div class="flex h-36 w-36 overflow-hidden rounded-full m-1">
        <Image src={Imagesrc} alt="Portrait" 
          class="min-w-full object-cover" />
      </div>
  <div class="flex flex-col justify-between flex-1 p-2">
    <div class="flex flex-col relative bottom-[4px]">
      <h1 class="text-end font-bold">{Name}</h1>
      <h3 class="text-end text-sm">{Title}</h3>
    </div>
    <div class="flex flex-col text-xs relative top-[5px]">
        <div class="flex self-end"><span class="material-symbols-rounded text-base! text-gray-500 pr-1">phone</span><span class="relative bottom-[1px] self-center font-extralight text-gray-500">{Phone}</span></div>
        <div class="flex self-end"><span class="material-symbols-rounded text-base! text-gray-500 pr-1">mail</span><span class="relative bottom-[1px] self-center font-extralight text-gray-500">{Mail}</span></div>
       
      </div>
  </div>

</div>
