---
const { ImageUrl, Caption, Timestamp, Permalink } = Astro.props;
import { Image } from "astro:assets";
import iglogo from "../assets/instagram2.svg";
---

<div class="card text-primary m-3 flex flex-col rounded-sm bg-white">
  <div class="flex w-full overflow-hidden">
    <Image
      src={ImageUrl}
      inferSize
      alt="Portrait"
      class="min-w-full object-cover"
    />
  </div>
  <h1 class="bg-primary m-2 w-min px-2 py-[2px] text-xs font-light text-white">
    SGTHALEXWEILERASCHBACH
  </h1>
  <div class="m-2 mt-0 flex flex-1">
    <pre class="inter-primary text-xs text-wrap">{Caption}</pre>
  </div>
  <div class="smol-header m-2 mt-0 flex flex-row justify-between text-xs">
    <label class="self-end font-light text-gray-500"
      >{new Date(Timestamp).toLocaleDateString()}</label
    >
    <a href={Permalink}><Image src={iglogo} alt="" class="w-4" /></a>
  </div>
</div>
